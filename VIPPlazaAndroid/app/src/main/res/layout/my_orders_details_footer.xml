<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/component_padding"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/whit_edit_text"
        android:padding="@dimen/component_padding"
        android:layout_marginBottom="@dimen/component_padding"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="match_parent"
                android:weightSum="1"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/txt_subtotal"
                    android:layout_weight=".5"
                    android:id="@+id/textView15" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:gravity="right"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:id="@+id/txt_subtotal" />
            </TableRow>


            <TableRow
                android:layout_width="match_parent"
                android:weightSum="1"
                android:layout_marginTop="@dimen/component_padding"
                android:visibility="gone"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/txt_delivery"
                    android:layout_weight=".5"
                    />

                <TextView
                    android:id="@+id/txt_delivery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:gravity="right"
                    android:textAppearance="?android:attr/textAppearanceSmall"

                    />
            </TableRow>


            <TableRow
                android:layout_width="match_parent"
                android:weightSum="1"
                android:layout_marginTop="@dimen/component_padding"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/txt_total"
                    android:layout_weight=".5"
                    />

                <TextView
                    android:id="@+id/txt_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:gravity="right"
                    android:textAppearance="?android:attr/textAppearanceSmall"

                    />
            </TableRow>

        </TableLayout>
    </LinearLayout>

</LinearLayout>
